<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="getChatGroup" onMouseClicked="#loadChatUserOrGroup" prefHeight="100.0" prefWidth="300.0" style="-fx-background-color: #8A2BE2;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ielena.chat.ChatApplication">
    <children>
        <HBox id="hbox" alignment="CENTER" fillHeight="false" prefHeight="100.0" prefWidth="300.0" stylesheets="@../../../css/userStyle.css">
            <children>
                <VBox alignment="CENTER" style="-fx-background-color: transparent;">
                    <children>
                        <Label fx:id="groupName" stylesheets="@../../../css/userTextStyle.css" text="nombre grupo" textFill="WHITE">
                            <VBox.margin>
                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="groupLastMessage" text="ultimo mensaje" textFill="WHITE">
                            <stylesheets>
                                <URL value="@../../../css/userStyle.css" />
                                <URL value="@../../../css/userTextStyle.css" />
                            </stylesheets></Label>
                    </children>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
